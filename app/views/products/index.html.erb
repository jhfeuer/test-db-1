<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Part Name</th>
      <th>In-House Product Number</th>
      <th>Supplier Product Number (if applicable)</th>
      <th>Part's In-house Owners</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.prodName %></td>
        <td><%= product.prodNum %></td>
        <td><%= product.prodSupplierNum %></td>
        <td><%= product.prodUTASowners %></td>
        <td><%= product.prodSupplier %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


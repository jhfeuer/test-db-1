<table>
  <thead>
    <tr>
      <th>Serial Number</th>
      <th>Product</th>
      <th>Part Number</th>
      <th>Removal Date</th>
      <th>Supplier</th>
      <th>Owner</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= link_to record.serialNum, edit_record_path(record) %></td>
        <td><%= record.product %></td>
        <td><%= record.partNum %></td>
        <td><%= record.removalDate %></td>
        <td><%= record.supplier %></td>
        <td><%= record.owner %></td>
        <td><%= record.status %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>